<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <!-- This is your view background -->
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Set your desired background color -->
            <corners android:radius="25dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <item android:top="5dp" android:left="5dp">
        <!-- This is the shadow -->
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" /> <!-- Set your desired shadow color -->
            <corners android:radius="25dp" /> <!-- Adjust corner radius to match the view background -->

        </shape>
    </item>
</layer-list>