<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/payment_request"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_mob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Request for Amount"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_mob"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="just give few details"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="TopUp Request to User"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_size_10"
                        android:layout_marginBottom="@dimen/margin_15dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/check_parent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Parent" />

                        <CheckBox
                            android:id="@+id/check_admin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Administrator" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/amount_money" />

                                <EditText
                                    android:id="@+id/edit_amount_"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:focusable="auto"
                                    android:hint="Enter Amount"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Amount"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/mode1" />

                                <TextView
                                    android:id="@+id/edit_paymentmode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:hint="Select Payment Mode"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Payment Mode"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/layout_userbank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/bank" />

                                <TextView
                                    android:id="@+id/edit_user_bank"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:hint="Select User Bank"
                                    android:padding="@dimen/margin_15dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="User Bank List"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/layout_transaction"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/mode1" />

                                <EditText
                                    android:id="@+id/edit_transactionno"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:focusable="auto"
                                    android:hint="Enter Transaction No"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Transaction No"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/layout_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/edit_profile" />

                                <EditText
                                    android:id="@+id/edit_remarks"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:focusable="auto"
                                    android:hint="Remarks Needed"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Remarks"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/layout_utr"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/cycle_number" />

                                <EditText
                                    android:id="@+id/edit_utr_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:focusable="auto"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="UTR No"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/layout_cash"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/mode1" />

                                <TextView
                                    android:id="@+id/edit_cashtype"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:hint="Select Cash Type"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Cash Type"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/color_calender" />

                                <TextView
                                    android:id="@+id/edit_payment_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Payment Date"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/linear_dd_number"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/cheque" />

                                <EditText
                                    android:id="@+id/edit_cheque_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:focusable="auto"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Cheque/DD number"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/linear_dd_date"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/color_calender" />

                                <TextView
                                    android:id="@+id/edit_check_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:maxLength="10"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Cheque/DD Date"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/border_edittext"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="0.4"
                                    android:src="@drawable/bank" />

                                <TextView
                                    android:id="@+id/edit_bank"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="2.6"
                                    android:background="@android:color/transparent"
                                    android:drawablePadding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@color/white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Deposit Bank"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:text="Credit Mode:"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/checkCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:text="Upload TransactionSlip:"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/image_slip"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_edittext"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_payment_request"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/red_colorbackground"
                    android:text="Payment Request"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/TV_ReceiptURL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Select Payment Mode"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
