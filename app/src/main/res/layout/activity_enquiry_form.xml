<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="8dp" app:cardCornerRadius="@dimen/dp_size_10" app:cardElevation="@dimen/padding_5">
                <LinearLayout android:orientation="vertical" android:padding="@dimen/dp_size_10" android:layout_width="match_parent" android:layout_height="match_parent">
                    <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="25dp">
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <EditText android:id="@+id/edit_name" android:background="@drawable/border_edittext" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:inputType="text"/>
                            <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Name"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="@dimen/margin_15dp">
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <EditText android:id="@+id/edit_email" android:background="@drawable/border_edittext" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:inputType="textEmailAddress"/>
                            <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Email"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="@dimen/margin_15dp">
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <EditText android:id="@+id/edit_mobile" android:background="@drawable/border_edittext" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:maxLength="10" android:inputType="number"/>
                            <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Mobile"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="@dimen/margin_15dp">
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <EditText android:id="@+id/edit_subject" android:background="@drawable/border_edittext" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:inputType="text"/>
                            <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Subject"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <FrameLayout android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="@dimen/margin_15dp">
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <EditText android:gravity="start" android:id="@+id/edit_message" android:background="@drawable/border_edittext" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:inputType="textMultiLine"/>
                            <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Message"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <RelativeLayout android:id="@+id/btn_submit" android:background="@drawable/violet_button_background" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="20dp" android:layout_marginBottom="@dimen/dp_size_10" android:elevation="5dp">
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Submit" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
