<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/gallerymenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:weightSum="2"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/linear_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_camera" />

            <TextView
                android:id="@+id/text_pending"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Camera"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/gallery"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_gallery" />

            <TextView
                android:id="@+id/text_history"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Gallery"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/gallerymenu"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="@dimen/margin20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/margin20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints">


    </TextView>

</RelativeLayout>