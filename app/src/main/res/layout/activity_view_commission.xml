<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:background="@drawable/rectangle_background"
        android:padding="@dimen/dp_size_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_size_10"
        android:text="View Commission"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/text_no_content" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No content to display" android:layout_centerInParent="true"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/view_commissions" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>
