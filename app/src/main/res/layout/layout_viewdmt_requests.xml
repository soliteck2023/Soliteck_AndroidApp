<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"  android:background="@drawable/simple_border" android:orientation="vertical" android:padding="@dimen/size40dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/title_size" android:textStyle="bold" android:textColor="@color/blue" android:layout_gravity="center" android:id="@+id/text_remark1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Data Money Transfer"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="30dp" android:weightSum="2">

        <LinearLayout
            android:id="@+id/linear_transferdmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/dmt1"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:padding="@dimen/padding_5"
                android:src="@drawable/dmt_new2" />

            <TextView
                android:id="@+id/text_history"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="DMT"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_transferdmt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/dmt2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="@dimen/padding_5"
                android:src="@drawable/dmt_new2" />

            <TextView
                android:id="@+id/text_pending"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="DMT1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
    <!--    <Button android:textColor="@color/white" android:id="@+id/btn_request" android:background="@drawable/button_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="Next"/>-->
</LinearLayout>