<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reuest_freme1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_balance">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="@dimen/margin_5dp"
        android:background="@drawable/rectangle_background"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lliner_mainbalance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="Main Balance "
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/view_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/violet_button_background"
                    android:padding="7dp"
                    android:text="View Balance"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reuest_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@+id/lliner_mainbalance"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="Request Balance"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/image_request"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="52dp"
                    android:src="@drawable/payment_request"></ImageView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>