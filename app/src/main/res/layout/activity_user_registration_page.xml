<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/solilogin"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@+id/soliteckwlcm"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:src="@drawable/app_logo1"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="37dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/soliteckwlcm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:fontFamily="serif"
                android:text="Welcome to Registration portal"
                android:textColor="@color/blue"
                android:textSize="19sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp"
                        app:layout_constraintTop_toTopOf="parent">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:id="@+id/mobile_reg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginTop="30dp"
                                    android:padding="5dp"
                                    android:text="Mobile Number"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginRight="@dimen/dp_size_10"
                                    android:background="@drawable/whitebackground"
                                    android:hint="Enter Mobile number"
                                    android:padding="5dp"
                                    android:textSize="16sp">

                                </EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/userName_reg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mobile_reg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginTop="30dp"
                                    android:padding="5dp"
                                    android:text="UserName"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginRight="@dimen/dp_size_10"
                                    android:background="@drawable/whitebackground"
                                    android:hint="Enter User Name"
                                    android:padding="5dp"
                                    android:textSize="16sp">

                                </EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/shopname_reg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userName_reg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginTop="30dp"
                                    android:padding="5dp"
                                    android:text="Shop Name"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginRight="@dimen/dp_size_10"
                                    android:background="@drawable/whitebackground"
                                    android:hint="Enter Shop Name"
                                    android:padding="5dp"
                                    android:textSize="16sp">

                                </EditText>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/role_reg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/shopname_reg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginTop="30dp"
                                    android:padding="5dp"
                                    android:text="Pin code"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginRight="@dimen/dp_size_10"
                                    android:background="@drawable/whitebackground"
                                    android:hint="Enter Pin Code"
                                    android:padding="5dp"
                                    android:textSize="16sp">

                                </EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/pinode_reg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/role_reg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginTop="30dp"
                                    android:padding="5dp"
                                    android:text="Role"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginRight="@dimen/dp_size_10"
                                    android:background="@drawable/whitebackground"
                                    android:entries="@array/type"
                                    android:padding="5dp"
                                    android:textSize="16sp">

                                </Spinner>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/parent_reg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/pinode_reg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginTop="30dp"
                                    android:padding="5dp"
                                    android:text="Parent No"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="@dimen/dp_size_10"
                                    android:layout_marginRight="@dimen/dp_size_10"
                                    android:background="@drawable/whitebackground"
                                    android:hint="Enter Parent Number"
                                    android:padding="5dp"
                                    android:textSize="16sp">

                                </EditText>
                            </LinearLayout>



                        </RelativeLayout>


                        <Button
                            android:id="@+id/sign_in"
                            android:layout_width="169dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/red_colorbackground"
                            android:text="Sign In"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Exit"
                            android:textColor="@color/blue_attractive"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>