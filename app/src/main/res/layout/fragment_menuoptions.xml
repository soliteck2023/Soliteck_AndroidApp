<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_balance">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_head_"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/rectangle_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/lliner_mainbalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/change_pwd1"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:weightSum="2">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/circle_shape_background_blank"
                        android:src="@drawable/change_password_svgviewer"

                        ></ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.8"
                        android:padding="2dp"
                        android:text="Change Password"
                        android:textColor="@color/blue"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/change_pwd2"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/change_pwd1"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:weightSum="2">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/circle_shape_background_blank"
                        android:src="@drawable/tpin_svgviewer"

                        ></ImageView>


                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.8"
                        android:padding="2dp"
                        android:text="Change Tpin"
                        android:textColor="@color/blue"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lliner_mainbalance2"
                android:layout_below="@+id/lliner_mainbalance"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/change_pwd3"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:weightSum="2">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/circle_shape_background_blank"
                        android:src="@drawable/contact_us_svgviewer"

                        ></ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.8"
                        android:padding="2dp"
                        android:text="Contact Us"
                        android:textColor="@color/blue"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/change_pwd4"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/change_pwd3"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:weightSum="2">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/circle_shape_background_blank"
                        android:src="@drawable/logout_svgviewer"
                        ></ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.8"
                        android:padding="2dp"
                        android:text="Logout"
                        android:textColor="@color/blue"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lliner_mainbalance2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                tools:ignore="NotSibling">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="4.5dp"
                    android:src="@drawable/rectangular_white_shape">

                </ImageView>


                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="4.5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/rectangle_color_background">

                </ImageView>



            </LinearLayout>





        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
