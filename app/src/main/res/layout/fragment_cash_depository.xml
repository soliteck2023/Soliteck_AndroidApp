<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_balance">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_head_"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_below="@+id/ProfileLayout"
        android:background="@drawable/rectangle_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lliner_mainbalance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Cash Balance "
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>

<!--                <TextView-->
<!--                    android:id="@+id/view_balance"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:background="@drawable/violet_button_background"-->
<!--                    android:padding="7dp"-->
<!--                    android:text="View Balance"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textStyle="bold"></TextView>-->


                <TextView
                    android:id="@+id/textaepsBalance"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/violet_button_background"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Cashout Balance"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
