<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" app:cardCornerRadius="8dp" app:cardElevation="2dp">
        <RelativeLayout android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/white" android:id="@+id/txtAmount" android:background="@drawable/button_background" android:paddingLeft="13dp" android:paddingTop="5dp" android:paddingRight="13dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs 10" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/txtTalkTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:text="Rs 7.73" android:layout_below="@+id/txtAmount"/>
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/txtValidaty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="unlimited" android:layout_alignParentRight="true"/>
            <TextView android:textSize="14sp" android:id="@+id/txtDescriptionType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:text="Regular Talktime" android:layout_below="@+id/txtTalkTime" android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
