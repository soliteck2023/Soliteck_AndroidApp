<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" app:cardCornerRadius="5dp" app:cardElevation="5dp">
        <LinearLayout android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textStyle="normal" android:textColor="@color/colorPrimary" android:gravity="right" android:id="@+id/text_date_time_" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="29 Jan 2019, 22 pm"/>
            <TextView android:textColor="@color/colorPrimary" android:id="@+id/text_transferBy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:hint="" android:layout_alignParentLeft="true"/>
            <View android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="1.2dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
            <TextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/text_transferTo" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/dark_green" android:gravity="right" android:id="@+id/text_amount_" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_5" android:hint="amount" android:layout_alignParentRight="true"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="2">
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/colorPrimary" android:id="@+id/text_currentBal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/colorPrimary" android:id="@+id/text_newBal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
