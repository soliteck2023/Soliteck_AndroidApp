<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:id="@+id/card_confirm" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="10dp" app:cardElevation="5dp">
            <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
                <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Transfer Info" android:layout_centerHorizontal="true"/>
                        <ImageView android:id="@+id/image_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_cancel_black_24dp"/>
                    </RelativeLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                        <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/owner" android:layout_weight="0.4"/>
                                    <TextView android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/text_beneficiary" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.6"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Beneficiary Name"/>
                            </RelativeLayout>
                        </FrameLayout>
                        <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/color_account" android:layout_weight="0.4"/>
                                    <TextView android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/text_account_no" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.6"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Account Number"/>
                            </RelativeLayout>
                        </FrameLayout>
                        <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/bank" android:layout_weight="0.4"/>
                                    <TextView android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/text_bank_" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.6"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Bank Name"/>
                            </RelativeLayout>
                        </FrameLayout>
                        <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/password" android:layout_weight="0.4"/>
                                    <TextView android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/text_ifsc_" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.6"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="IFSC Code"/>
                            </RelativeLayout>
                        </FrameLayout>
                        <FrameLayout android:id="@+id/frame_tpin" android:visibility="visible" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/pincode" android:layout_weight="0.4"/>
                                    <EditText android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/edit_tpin" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:maxLength="4" android:layout_weight="2.6" android:inputType="numberPassword"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Tpin"/>
                            </RelativeLayout>
                        </FrameLayout>
                        <TextView android:textStyle="bold" android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="Transaction Type "/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="2">
                            <LinearLayout android:gravity="center" android:id="@+id/type_neft" android:background="@drawable/border_edittext" android:visibility="visible" android:layout_width="0dp" android:layout_height="35dp" android:layout_marginRight="10dp" android:layout_weight="1">
                                <TextView android:textColor="@color/black" android:id="@+id/text_neft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NEFT"/>
                            </LinearLayout>
                            <LinearLayout android:gravity="center" android:id="@+id/type_imps" android:background="@drawable/border_edittext" android:layout_width="0dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_weight="1">
                                <TextView android:textColor="@color/black" android:id="@+id/text_imps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="IMPS"/>
                            </LinearLayout>
                        </LinearLayout>
                        <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/amount_money" android:layout_weight="0.4"/>
                                    <EditText android:id="@+id/text_amount" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.6" android:inputType="number"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Amount "/>
                            </RelativeLayout>
                        </FrameLayout>
                        <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="15dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/border_edittext" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="3">
                                    <ImageView android:layout_width="0dp" android:layout_height="25dp" android:src="@drawable/amount_money" android:layout_weight="0.4"/>
                                    <EditText android:id="@+id/TextWordAmount" android:background="@android:color/transparent" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2.6" android:inputType="number"/>
                                </LinearLayout>
                                <TextView android:textColor="@color/black" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Amount In Words"/>
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                    <Button android:textColor="@color/white" android:id="@+id/btn_send_money" android:background="@drawable/button_background" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="25dp" android:layout_marginBottom="15dp" android:text="Transfer"/>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:id="@+id/card_success" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" app:cardCornerRadius="10dp" app:cardElevation="10dp">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="18sp" android:textColor="@color/dark_green" android:gravity="center" android:id="@+id/txtDesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_below="@+id/image_cancel"/>
                <TextView android:textSize="15sp" android:textColor="@color/dark_green" android:gravity="center" android:id="@+id/txtDesc_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_below="@+id/image_cancel"/>
                <com.example.api_call.CheckView android:layout_gravity="center" android:id="@+id/check" android:visibility="visible" android:layout_height="110dp" android:layout_marginTop="15dp" android:layout_centerInParent="true" android:layout_width="110dp"/>
                <ImageView android:id="@+id/image_pend" android:layout_width="110dp" android:layout_height="110dp" android:layout_marginTop="15dp" android:src="@drawable/image_pending"/>
                <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/text_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/text_account" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Acc: "/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/text_bank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text=""/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/text_ifsc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="IFSC:"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/white" android:id="@+id/text_pan" android:background="@color/colorPrimary" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Amount: 120"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorAccent" android:gravity="right" android:id="@+id/text_done" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Done"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
