<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/blue"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp" app:cardCornerRadius="5dp" app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textStyle="normal" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/product_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Product Name"/>
            <TextView android:textStyle="normal" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/operator_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Operator Name"/>
            <TextView android:textStyle="normal" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/discription" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Rs 10 to 1000"/>
            <View android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="1.2dp" android:layout_margin="15dp"/>
            <TextView android:textStyle="normal" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/commission_charge" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Commission"/>
            <TextView android:textStyle="normal" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/service_charge" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Service charge"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>