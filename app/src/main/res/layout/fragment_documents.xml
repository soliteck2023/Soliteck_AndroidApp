<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documents">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Pancard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:padding="5dp"
                        android:text="Pancard"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enter_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginRight="@dimen/dp_size_10"
                        android:maxLength="11"
                        android:background="@drawable/bacground_black"
                        android:hint="Enter Pancard no"
                        android:textColor="@color/white"
                        android:textColorHint="#636262"
                        android:padding="5dp"
                        android:textSize="16sp">

                    </com.google.android.material.textfield.TextInputEditText>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile_reg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pincodekyc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dp_size_10"
                            android:layout_marginTop="30dp"
                            android:padding="5dp"
                            android:text="Adhaar Front"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobile_reg"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/adhargallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/dp_size_10"
                                android:padding="5dp"
                                android:background="@drawable/bacground_black"
                                android:text="Choose File"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.png"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                ></TextView>



                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginTop="30dp"
                        android:padding="5dp"
                        android:text="Adhaar Back"
                        android:maxLength="25"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile_reg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/adharfront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dp_size_10"
                            android:background="@drawable/bacground_black"
                            android:padding="5dp"
                            android:text="Choose File"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.png"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            ></TextView>



                    </LinearLayout>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pinode_reg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Father_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginTop="30dp"
                        android:padding="5dp"
                        android:text="PAN card "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile_reg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/panfront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dp_size_10"
                            android:background="@drawable/bacground_black"
                            android:padding="5dp"
                            android:text="Choose File"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.png"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            ></TextView>



                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linermother_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_reg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mother_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_size_10"
                        android:layout_marginTop="30dp"
                        android:padding="5dp"
                        android:text="Photo"
                        android:phoneNumber="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile_reg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/photofront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dp_size_10"
                            android:background="@drawable/bacground_black"
                            android:padding="5dp"
                            android:text="Choose File"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.png"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            ></TextView>



                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >


                    <Button
                        android:id="@+id/button_reviousin"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/red_colorbackground"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:text="Previous">

                    </Button>

                    <Button
                        android:id="@+id/button_registerin"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/violet_button_background"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:text="Next">

                    </Button>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>





    </RelativeLayout>


</FrameLayout>