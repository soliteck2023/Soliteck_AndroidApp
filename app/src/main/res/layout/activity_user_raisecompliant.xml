<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/complaintlist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:text="View Complaint Raise Report"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:background="@drawable/rectangle_background"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
               android:visibility="gone"
                android:id="@+id/view_compaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_10"
                android:layout_marginLeft="@dimen/dp_size_10">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30sp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="15dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        app:cardElevation="5dp"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/raise_cmpt"
                            android:layout_width="match_parent"
                            android:text="Select Compaint Type"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:background="@drawable/text_view_border"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:layout_height="50dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="match_parent"
                        app:cardElevation="5dp"
                        android:layout_gravity="center"
                        >

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/transction_id"
                            android:layout_width="match_parent"
                            android:hint="Transaction Id"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:background="@drawable/text_view_border"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:layout_height="50dp">

                        </EditText>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="match_parent"
                        app:cardElevation="5dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50dp"
                        >
                        <EditText
                            android:id="@+id/raise_discription"
                            android:layout_width="match_parent"
                            android:maxLines="3"
                            android:padding="10dp"
                            android:background="@drawable/text_view_border"
                            android:hint="Complain Description"
                            android:layout_height="100dp">
                        </EditText>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/clear"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="Clear"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/curveshape_background"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/submit"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="Submit"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_marginLeft="@dimen/dp_size_10"
                            android:textColor="@color/white"
                            android:background="@drawable/curveshape_background"
                            >

                        </TextView>



                    </LinearLayout>



                </LinearLayout>








            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
