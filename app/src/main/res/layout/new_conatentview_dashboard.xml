<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_marginBottom="10dp"
    tools:ignore="MissingDefaultResource">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size40dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containt1"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="150dp">


<!--                <View-->
<!--                    android:id="@+id/view"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="120dp"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    tools:ignore="MissingConstraints"-->
<!--                    tools:layout_editor_absoluteY="0dp"></View>-->

                <View
                    android:id="@+id/view"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints" />


<!--                <View-->
<!--                    android:id="@+id/view1"-->
<!--           led         android:layout_width="wrap_content"-->
<!--                    android:layout_height="190dp"-->
<!--                    android:background="@drawable/vertical_line"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    tools:ignore="MissingConstraints"-->
<!--                    tools:layout_editor_absoluteY="6dp" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/TextName"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="20dp"
                        android:text="Hello ,"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"></TextView>

                    <TextView
                        android:id="@+id/TextName1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Vishal "
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"></TextView>


                </LinearLayout>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="15dp"
                    app:cardMaxElevation="10dp"
                    android:background="@drawable/corner_shadow_background"
                    app:cardCornerRadius="15dp"
                    android:translationZ="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="140dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imge11"
                                android:layout_width="40dp"
                                android:layout_height="60dp"
                                android:src="@drawable/main_balance2">

                            </ImageView>

                            <LinearLayout
                                android:id="@+id/main_liner"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_toRightOf="@id/imge11"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_size_10"
                                    android:text="Main Balance"
                                    android:textColor="@color/blue"
                                    android:textSize="13.3sp"
                                    android:textStyle="bold">

                                </TextView>


                                <ImageView
                                    android:id="@+id/hideimge1"
                                    android:layout_width="59dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/star"
                                    android:visibility="visible"
                                    ></ImageView>

                                <TextView
                                    android:id="@+id/textbalance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="7878"
                                    android:textSize="13.3sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue"
                                    android:visibility="gone">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="155dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imge12"
                                android:layout_width="40dp"
                                android:layout_height="60dp"
                                android:padding="2dp"
                                android:src="@drawable/cashout_balance">

                            </ImageView>

                            <LinearLayout
                                android:id="@+id/cashout_liner"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/imge12"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_size_10"
                                    android:text="Cashout Balance"
                                    android:textColor="@color/blue"
                                    android:textSize="13.3sp"
                                    android:textStyle="bold">

                                </TextView>

                                <ImageView
                                    android:id="@+id/hideimge2"
                                    android:layout_width="59dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/star"
                                    ></ImageView>


                                   <TextView
                                    android:id="@+id/textaepsBalance"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:visibility="gone"
                                   android:textStyle="bold"
                                   android:textSize="13.3sp"
                                   android:text="7878"
                                   android:textColor="@color/blue">

                                   </TextView>


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/text_news"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:scrollHorizontally="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Welcome To SoliTeck User Portal"></TextView>


            <LinearLayout
                android:id="@+id/cartview1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/balanceLayout1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:elevation="20dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="15dp"
                android:translationZ="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/curveshape_background"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/first_linear"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/menu_bank_logo1"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:paddingLeft="@dimen/dp_size_10"
                        android:paddingTop="@dimen/dp_size_10"
                        android:paddingRight="@dimen/dp_size_10"
                        android:src="@drawable/pay_request" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Payment\nRequest"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_linier"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/first_linear"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image_wallet"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:paddingLeft="@dimen/dp_size_10"
                        android:paddingTop="@dimen/dp_size_10"
                        android:paddingRight="@dimen/dp_size_10"
                        android:src="@drawable/bank_list" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Bank\nList"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/third_linear"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/second_linier"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image_account"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:paddingLeft="@dimen/dp_size_10"
                        android:paddingTop="@dimen/dp_size_10"
                        android:paddingRight="@dimen/dp_size_10"
                        android:src="@drawable/internal_load" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Internal\nLoad"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourth"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/third_linear"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image_account2"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:paddingLeft="@dimen/dp_size_10"
                        android:paddingTop="@dimen/dp_size_10"
                        android:paddingRight="@dimen/dp_size_10"
                        android:src="@drawable/aeps_settlement" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="AEPS\nSettlement"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/simple_border"
                android:orientation="horizontal">


                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/recyclerAd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:fastScrollEnabled="true"
                    android:layout_below="@+id/containt1"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_image_horizontal"
                    android:src="@drawable/banner_8thfeb">

                </pl.droidsonroids.gif.GifImageView>

            </LinearLayout>


            <include layout="@layout/newcontentdashboard"></include>


            <include layout="@layout/report_other_activity"></include>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>